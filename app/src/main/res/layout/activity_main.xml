<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/logo_petik"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ini_text"
        android:textColor="@color/wornopoteh"
        android:layout_gravity="center"
        android:textSize="50dp"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login!"
        android:background="@drawable/custom4"
        android:textSize="20dp"
        android:outlineSpotShadowColor="@color/wornopoteh"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:shadowColor="@color/wornopoteh"
        android:outlineAmbientShadowColor="@color/wornobiru"
        />



</LinearLayout>